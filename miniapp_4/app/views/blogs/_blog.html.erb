<div class="clearfix content_post" >

  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <div class="card-panel grey lighten-5 z-depth-1">
      <div class="row valign-wrapper">
        <div class="col s2">
          <img src="/app/assets/images/naruma.png" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
        </div>
        <div class="col s10">
          <span class="black-text">

            <p><%= simple_format(partial_blog.comment) %></p>
            <span class="name">
              <a href="/blogs/index">
                <span>投稿者</span><%= partial_blog.user.id %>
              </a>
            </span>

            <% if user_signed_in? && current_user.id == partial_blog.user_id %>
              <div class="more">
                <ul class="more_list">
                  <li>
                    <%= link_to '詳細', "/blogs/#{partial_blog.id}", class: "waves-effect waves-light btn", method: :get, id: partial_blog.id %>
                  </li>
                  <li>
                    <%= link_to '編集', "/blogs/#{partial_blog.id}/edit", class: "waves-effect waves-light btn", method: :get, id: partial_blog.id  %>
                  </li>
                  <li>
                    <%= link_to '削除', "/blogs/#{partial_blog.id}", class: "waves-effect waves-light btn", method: :delete, id: partial_blog.id %>
                 </li>
                </ul>
              </div>
            <% end %>

          </span>
        </div>
      </div>
    </div>
  </div>

</div>
